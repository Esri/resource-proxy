@if (ViewData.ContainsKey(FP.Cloud.OnlineRateTable.Web.Controllers.ProductCalculationController.REQUEST_DESCRIPTION))
{
    var requestDescription = ((FP.Cloud.OnlineRateTable.Common.ProductCalculation.SelectIndexDescriptionInfo)ViewData[FP.Cloud.OnlineRateTable.Web.Controllers.ProductCalculationController.REQUEST_DESCRIPTION]);
    <div>
        <h4>Please select an item</h4>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @requestDescription.DescriptionTitle
                </th>
            </tr>

            @{int i = 0; }
            @foreach (var item in requestDescription.IndexEntries)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item, "SelectIndex", new { index = @i }, new { @class = "btn btn-primary btn-lg btn-block" } )
                    </td>
                </tr>
                i++;
            }

        </table>
    </div>
}
