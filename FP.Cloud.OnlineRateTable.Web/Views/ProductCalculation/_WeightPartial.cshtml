@using FP.Cloud.OnlineRateTable.Web.Controllers
@using FP.Cloud.OnlineRateTable.Common.ProductCalculation

@if (ViewData.ContainsKey(ProductCalculationController.WEIGHT))
{
    var weight = ((WeightInfo)ViewData[ProductCalculationController.WEIGHT]);
    if (null != weight)
    {
        <div>
            <h4>Weight</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Metric Weight"):
                </dt>
                <dd>
                    @weight.FormattedWeight
                </dd>
                <dt>
                    @Html.DisplayName("Imperial Weight"):
                </dt>
                <dd>
                    @weight.FormattedWeightImperial
                </dd>
            </dl>
        </div>
    }
}
