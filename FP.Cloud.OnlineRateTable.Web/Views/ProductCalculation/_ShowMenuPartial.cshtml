@if (ViewData.ContainsKey(FP.Cloud.OnlineRateTable.Web.Controllers.ProductCalculationController.REQUEST_DESCRIPTION))
{
    var pcalc = ((FP.Cloud.OnlineRateTable.Common.ProductCalculation.ShowMenuDescriptionInfo)ViewData[FP.Cloud.OnlineRateTable.Web.Controllers.ProductCalculationController.REQUEST_DESCRIPTION]);

    <div>
        <h4>Please select a service</h4>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @pcalc.DescriptionTitle
                </th>
            </tr>

            @{int i = 0; }
            @foreach (var item in pcalc.MenuEntries)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item, "SelectMenuIndex", new { index = @i }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </td>
                </tr>
                i++;
            }

        </table>
    </div>
}
